{
    "name": "n3xt0r/laravel-passport-authorization-core",
    "description": "This is my package laravel-passport-authorization-core",
    "keywords": [
        "Ilya Beliaev",
        "laravel",
        "laravel-passport-authorization-core"
    ],
    "homepage": "https://github.com/n3xt0r/laravel-passport-authorization-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Ilya Beliaev",
            "email": "info@php-dev.info",
            "homepage": "https://php-dev.info",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0",
        "phpunit/phpunit": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "N3XT0R\\LaravelPassportAuthorizationCore\\": "src/",
            "N3XT0R\\LaravelPassportAuthorizationCore\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "N3XT0R\\LaravelPassportAuthorizationCore\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "N3XT0R\\LaravelPassportAuthorizationCore\\LaravelPassportAuthorizationCoreServiceProvider"
            ]
        }
    },
    "suggest": {
       "n3xt0r/laravel-passport-modern-scopes": "Enhance scope management with modern features."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
